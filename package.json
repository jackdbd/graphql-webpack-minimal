{
  "name": "graphql-webpack-minimal",
  "version": "1.0.0",
  "description": "A super-simple GraphQL server with a basic configuration for webpack 4.",
  "main": "src/js/server.js",
  "author": "jackdbd <jackdebidda@gmail.com>",
  "scripts": {
    "build": "webpack --config ./webpack.config.js --progress --mode production",
    "dev": "webpack --config ./webpack.config.js --mode development",
    "serve": "node public/bundle.js",
    "lint": "prettier --write '{,!(node_modules)/}**/*.{js,jsx}'"
  },
  "dependencies": {
    "apollo-server-express": "^1.3.6",
    "body-parser": "^1.18.2",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.9.1",
    "graphql-tools": "^3.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.24.1",
    "prettier": "^1.12.1",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15"
  }
}
